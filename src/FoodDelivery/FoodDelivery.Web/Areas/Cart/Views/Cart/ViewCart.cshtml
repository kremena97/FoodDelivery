@model CartViewModel
@{
    ViewData["Title"] = "ViewCart";
}

<!-- Cart -->
<section class="cart p-t-70 p-b-100">
    <div class="container">
        <!-- Cart item -->
        <div class="row">
            <div class="col">
                <div class="container-table-cart pos-relative">
                    <div class="wrap-table-shopping-cart bgwhite">
                        <table class="table-shopping-cart">
                            <tr class="table-head">
                                <th class="column-1"></th>
                                <th class="column-2">Product</th>
                                <th class="column-3">Price</th>
                                <th class="column-4 p-l-70">Quantity</th>
                                <th class="column-5">Total</th>
                                <th class="column-5"></th>
                            </tr>
                            @foreach (var item in @Model.CartItems)
                            {
                                <tr class="table-row">
                                    <td class="column-1">
                                        <div class="cart-img-product b-rad-4 o-f-hidden">
                                            <img src="@item.ImageUrl" alt="IMG-PRODUCT">
                                        </div>
                                    </td>
                                    <td class="column-2">@item.Name</td>
                                    <td class="column-3">$@item.Price</td>
                                    <td class="column-4">
                                        <div class="flex-w bo5 of-hidden w-size17">
                                            <a asp-area="Cart" asp-controller="Cart" asp-action="Edit" asp-route-id="@item.Id" asp-route-quantity="@(item.Quantity - 1)" class="btn-num-product-down color1 flex-c-m size7 bg8 eff2">
                                                <i class="fs-12 fa fa-minus" aria-hidden="true"></i>
                                            </a>

                                            <input class="size8 m-text18 t-center num-product" type="number" name="num-product1" value="@item.Quantity">

                                            <a asp-area="Cart" asp-controller="Cart" asp-action="Edit" asp-route-id="@item.Id" asp-route-quantity="@(item.Quantity + 1)" class="btn-num-product-up color1 flex-c-m size7 bg8 eff2">
                                                <i class="fs-12 fa fa-plus" aria-hidden="true"></i>
                                            </a>
                                        </div>
                                    </td>
                                    <td class="column-5">$@item.Total</td>
                                    <td class="column-5"><a asp-area="Cart" asp-controller="Cart" asp-action="Delete" asp-route-id="@item.Id">X</a></td>
                                </tr>
                            }
                        </table>
                    </div>
                </div>
            </div>
            <div class="col">
                <!-- Total -->
                <div class="bgwhite bo9 w-size18 p-l-20 p-r-20 p-t-15 p-b-15 m-r-0 m-l-auto p-lr-15-sm">
                    <div class="flex-w flex-sb-m p-t-26 p-b-30">
                        <span class="m-text22 w-size19 w-full-sm">
                            Total:
                        </span>

                        <span class="m-text21 w-size20 w-full-sm">
                            $@Model.Total
                        </span>
                    </div>
                    <div class="size15 trans-0-4">
                        <!-- Button -->
                        <a asp-area="Orders" asp-controller="Orders" asp-action="Create" class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4">
                            Proceed to Checkout
                        </a>
                    </div>

                </div>
                <!--  -->
                               
            </div>
        </div>
    </div>
</section>

