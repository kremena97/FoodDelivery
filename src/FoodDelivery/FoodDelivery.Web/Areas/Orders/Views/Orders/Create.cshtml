
@{
    ViewData["Title"] = "Order";
}

<!-- Total -->
<div class="container m-t-100">
    <div class="bgwhite bo9 m-l-100 m-r-100 ">
        <h5 class="m-text20 d-flex justify-content-center m-t-30">
            Finish order
        </h5>

        <!--  -->
        <div class="row m-l-20 m-r-20">
            <div class="col">
                <div class="flex-w flex-sb-m p-b-12">
                    <span class="s-text18 w-size19 w-full-sm">
                        Address:
                        <br />
                    </span>
                    <br />
                    <span class="m-text21 w-size20 w-full-sm">
                        dalhfdskjbviusdjbvds
                    </span>
                </div>
                <button class="btn"><i class="fa fa-home"></i> Add new address</button>
                <!--  -->
                <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
                    <div class="w-size20 w-full-sm">
                        <div class="rs2-select2 rs3-select2 rs4-select2 bo4 of-hidden w-size21 m-t-8 m-b-12">
                            <select class="selection-2" name="country">
                                <option>Select a city...</option>
                                <option>US</option>
                                <option>UK</option>
                                <option>Japan</option>
                            </select>
                        </div>

                        <div class="size13 bo4 m-b-12">
                            <input class="sizefull s-text7 p-l-15 p-r-15" type="text" rows="6" name="state" placeholder="Address">
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="flex-w flex-sb-m p-b-12">
                    <span class="s-text18  w-full-sm">
                        Phone Number:
                        <br />
                    </span>
                    <br />
                    <span class="m-text21 w-size20 w-full-sm">
                        dalhfdskjbviusdjbvds
                    </span>
                </div>
                <button class="btn"><i class="fas fa-phone"></i> Change phone number</button>

                <div class="flex-w flex-sb bo10 p-t-15 p-b-20">
                    <div class="size13 bo4 m-b-22">
                        <input class="sizefull s-text7 p-l-15 p-r-15" type="text" name="postcode" placeholder="Phone number">
                    </div>
                </div>
            </div>
        </div>
        <div class="row m-l-20 m-r-20">
            <div class="flex-w flex-sb-m p-t-26 p-b-30">
                <span class="m-text22 w-size19 w-full-sm">
                    Total:
                </span>

                <span class="m-text21 w-size20 w-full-sm">
                    $39.00
                </span>
            </div>
        </div>
        <div class="size12 trans-0-4 ">
            <!-- Button -->
            <button class="flex-c-m sizefull bg1 bo-rad-23 hov1 s-text1 trans-0-4  d-flex justify-content-center">
                Checkout
            </button>
        </div>
    </div>
    <!--  -->



</div>