@model MenuViewModel
@{
    ViewData["Title"] = "Menu";
}

<!-- Content page -->
<section class=" p-t-55 p-b-65">
    <div class="container content-background">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-lg-3 p-b-50">
                <div class="leftbar p-r-20 p-r-0-sm">
                    <!--  -->
                    <h4 class="m-text14 p-b-7">
                        Categories
                    </h4>
                    <ul class="p-b-54">
                        @foreach (var category in @Model.Categories)
                        {
                            <li class="p-t-4">
                                <button asp-area="Products" asp-controller="Products" asp-action="Menu" asp-for="@Model.DisplayCategory" method="post" class="button" type="submit" value="Submit">
                                    @category.Name.ToString()
                                </button>
                            </li>
                        }
                    </ul>

                    <!--  -->
                    <div class="search-product pos-relative bo4 of-hidden">
                        <input class="s-text7 size6 p-l-23 p-r-50" type="text" name="search-product" placeholder="Search Products...">

                        <button class="flex-c-m size5 ab-r-m color2 color0-hov trans-0-4">
                            <i class="fs-12 fa fa-search" aria-hidden="true"></i>
                        </button>
                    </div>
                </div>
            </div>
            <!-- Product -->
            <div class="col-sm-6 col-md-8 col-lg-9 p-b-50">
                <div class="row transparent-style">
                    @for (int i = 0; i < @Model.Products.Count; i++)
                    {
                        var product = @Model.Products[i];

                        <div class="col-sm-12 col-md-6 col-lg-4 p-b-50">
                            <!-- Block2 -->
                            <div class="block2">
                                <div class="block2-img wrap-pic-w of-hidden pos-relative">
                                    <img src="@product.Picture" alt="IMG-PRODUCT">

                                    <div class="block2-overlay trans-0-4">
                                        

                                        <div class="block2-btn-addcart w-size1 trans-0-4">
                                            <!-- Button -->
                                            <a id="button-add-to-card" asp-area="Cart" asp-controller="Cart" asp-action="Add" asp-route-id="@product.Id" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 trans-0-4">
                                                Add to Cart
                                            </a>
                                            <a asp-area="Products" asp-controller="Products" asp-action="Details" asp-route-id="@product.Id" class="flex-c-m size1 bg4 bo-rad-23 hov1 s-text1 ">
                                                Details
                                            </a>
                                        </div>

                                    </div>
                                </div>

                                <div class="block2-txt">
                                    <a href="product-detail.html" class="block2-name dis-block s-text3 p-b-5">
                                        @product.Name
                                    </a>

                                    <span class="block2-price m-text6 p-r-5">
                                        $@product.Price
                                    </span>
                                </div>
                            </div>
                        </div>
                    }


                </div>

                <!-- Pagination -->
                <div class="pagination flex-m flex-w p-t-26">
                    <a href="#" class="item-pagination flex-c-m trans-0-4 active-pagination">1</a>
                    <a href="#" class="item-pagination flex-c-m trans-0-4">2</a>
                </div>
            </div>
        </div>
    </div>
</section>